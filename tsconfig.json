{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "es2020",
      "DOM"
    ],
    "sourceMap": true,
    "outDir": "dist",
    "types": [
      "reflect-metadata", "jest"
    ],
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": [
        "*"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "tests",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
