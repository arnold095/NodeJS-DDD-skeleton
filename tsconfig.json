{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "es2020",
      "DOM"
    ],
    "sourceMap": true,
    "outDir": "dist",
    "types": [
      "reflect-metadata", "jest"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "*"
      ]
    }
  },
  "include": ["src/**/*.ts"],
  "removeComments": true,
  "noEmitOnError": true,
  "noUnusedLocals": true,
  "noUnusedParameters": true,
  "noImplicitReturns": true,
  "esModuleInterop": true,
  "forceConsistentCasingInFileNames": true
}
