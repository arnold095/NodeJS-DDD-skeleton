    "@types/glob": "^8.0.0",
    "@types/jest": "28.1.2",
    "@types/jsonwebtoken": "8.5.8",
    "@types/node": "18.0.3",
    "@types/source-map-support": "^0.5.6",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "5.30.7",
    "@typescript-eslint/parser": "5.30.7",
    "chokidar": "3.5.3",
